{
  "compilerOptions": {
    "target": "ES6",                              
    "lib": ["ES6"],                                       
    "module": "NodeNext",                                
    "sourceMap": true,                            
    "outDir": "dist",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "nodenext",
    }
  }
}
